<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#EFEFF4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">


          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="9dp"
              android:layout_height="match_parent">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_marginStart="10dp"
                  android:layout_height="wrap_content">


                  <ImageView
                      android:layout_width="16dp"
                      android:id="@+id/arrow_image"
                      android:layout_alignParentStart="true"
                      android:layout_centerInParent="true"
                      android:layout_height="12dp"
                      android:src="@drawable/arrow_back_big"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:textSize="17sp"
                      android:textColor="#000"
                      android:text="Your Profile"
                      android:layout_centerInParent="true"
                      android:layout_height="wrap_content"/>
              </RelativeLayout>

               <TextView
                   android:layout_width="match_parent"
                   android:text="40% Completed"
                   android:textSize="12sp"
                   android:gravity="center"
                   android:textColor="#8C8C8C"

                   android:layout_height="wrap_content"/>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:background="#CDCED2"
                   android:layout_marginTop="40dp"
                   android:layout_height="1dp">

               </LinearLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:background="#fff"
                   android:paddingBottom="20dp"
                   android:layout_height="wrap_content">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginStart="34dp"
                       android:layout_marginTop="32dp"

                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:id="@+id/imv_profile_home_1"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:src="@drawable/image_profile"
                           android:layout_height="wrap_content"/>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:gravity="center"
                           android:layout_marginStart="20dp"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           android:layout_toEndOf="@+id/imv_profile_home_1"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="match_parent"
                               android:text="Dr. Sherley"
                               android:textColor="#000"
                               android:textSize="16sp"
                               android:layout_height="wrap_content"/>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:background="#CDCED2"
                               android:layout_marginTop="10dp"
                               android:layout_marginEnd="30dp"
                               android:layout_height="1dp">

                           </LinearLayout>

                           <TextView
                               android:layout_width="match_parent"
                               android:text="Abraham"
                               android:textColor="#000"
                               android:layout_marginTop="7dp"
                               android:textSize="16sp"
                               android:layout_height="wrap_content"/>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:background="#CDCED2"
                               android:layout_marginTop="7dp"
                               android:layout_marginEnd="30dp"
                               android:layout_height="1dp">

                           </LinearLayout>
                       </LinearLayout>
                   </RelativeLayout>
               </RelativeLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:background="#fff"
                   android:layout_marginTop="13dp"

                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Mobile Number"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:text="+ 851 9885 0994"
                           android:textColorHint="#8C8C8C"
                           android:backgroundTint="#fff"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>


                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Email ID"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:textColorHint="#8C8C8C"
                           android:hint="enter email "
                           android:backgroundTint="#fff"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Gender"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:hint="select"
                           android:backgroundTint="#fff"
                           android:textColorHint="#8C8C8C"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Date of Birth"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:textColorHint="#8C8C8C"
                           android:hint="mm/dd/yyyy"
                           android:backgroundTint="#fff"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Experience"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:textColorHint="#8C8C8C"
                           android:hint="+add"
                           android:backgroundTint="#fff"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Emergency Contact"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:hint="add details"
                           android:backgroundTint="#fff"
                           android:textColorHint="#8C8C8C"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginTop="13dp"
                       android:paddingEnd="16dp"
                       android:paddingStart="18dp"
                       android:paddingBottom="10dp"
                       android:layout_height="50dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:textColor="#000"
                           android:text="Location"
                           android:layout_centerInParent="true"
                           android:layout_alignParentStart="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:layout_width="wrap_content"
                           android:textColor="#8C8C8C"
                           android:hint="Hong Kong, China"
                           android:backgroundTint="#fff"
                           android:textColorHint="#8C8C8C"
                           android:gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_alignParentEnd="true"
                           android:textSize="16sp"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="#CDCED2"
                       android:layout_height="1dp">

                   </LinearLayout>
               </LinearLayout>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:background="@drawable/button_shape_blue"
                   android:text="Save"
                   android:layout_marginTop="39dp"
                   android:textColor="#fff"
                   android:textSize="17sp"
                   android:layout_marginStart="102dp"
                   android:layout_marginEnd="102dp"/>
          </LinearLayout>
     </ScrollView>
</LinearLayout>